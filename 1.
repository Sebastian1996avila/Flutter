// 1. Escribir un programa que defina una clase Persona con los atributos nombre, edad y género, y un método presentarse que imprima en la consola (haciendo uso de 1 solo print) una breve descripción de la persona.


class Persona {
  String nombre;
  int edad;
  String genero;
  
 
  Persona(this.nombre, this.edad, this.genero);
  
 
  void presentarse() {
    print('Hola, soy $nombre, tengo $edad años y soy de genero            $genero.');
  }
}

void main() {
 
  var persona1 = Persona('Carlos', 27, 'Masculino');
  
  persona1.presentarse();
}
